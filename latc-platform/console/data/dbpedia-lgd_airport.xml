<?xml version="1.0" encoding="utf-8" ?>
<Silk>

  <Prefixes>
    <Prefix id="rdfs" namespace="http://www.w3.org/2000/01/rdf-schema#" />
    <Prefix id="dbpedia" namespace="http://dbpedia.org/ontology/" />
    <Prefix id="dbpedia-owl" namespace="http://dbpedia.org/ontology/" />
    <Prefix id="umbel-sc" namespace="http://umbel.org/umbel/sc/" />    	    		
    <Prefix id="linkedgeodata" namespace="http://linkedgeodata.org/triplify/" />
    <Prefix id="lgdp" namespace="http://linkedgeodata.org/property/" />
    <Prefix id="lgdo" namespace="http://linkedgeodata.org/ontology/" />
    <Prefix id="owl" namespace="http://www.w3.org/2002/07/owl#" />
    <Prefix id="geo" namespace="http://www.w3.org/2003/01/geo/wgs84_pos#" />
  </Prefixes>

 <DataSources>
    <DataSource id="dbpedia" type="sparqlEndpoint">
      <Param name="endpointURI" value="http://dbpedia.org/sparql/" />
      <Param name="graph" value="http://dbpedia.org" />
      <Param name="retryCount" value="100" />
      <Param name="retryPause" value="10000" />            
    </DataSource>
    <DataSource id="linkedgeodata" type="sparqlEndpoint">
      <Param name="endpointURI" value="http://linkedgeodata.org/sparql/" />
      <Param name="graph" value="http://linkedgeodata.org" />
      <Param name="retryCount" value="100" />
      <Param name="retryPause" value="10000" />      
    </DataSource>
  </DataSources>

  <Interlinks>
    <Interlink id="airport">
      <LinkType>owl:sameAs</LinkType>

      <SourceDataset dataSource="dbpedia" var="a">
        <RestrictTo>
          {?a a dbpedia-owl:Airport}
        </RestrictTo>
      </SourceDataset>

      <TargetDataset dataSource="linkedgeodata" var="b">
        <RestrictTo>
          {?b a lgdo:Aerodrome}
<!-- wird später wohl geändert zu     ?b ontology:place "city" und noch später dann ein eigenes objekt für city,
z.B. ?b ontology:place ontology:city -->
        </RestrictTo>
      </TargetDataset>
<!--
      <Blocking blocks="10" function="alphanumeric">
        <Input path="?a/rdfs:label" />
      </Blocking>
-->
      <LinkCondition>
      <Aggregate type="average">
      <Aggregate type="max">
          <Compare metric="jaro">
            <Input path="?a/rdfs:label" />
            <Input path="?b/rdfs:label" />
          </Compare>
        </Aggregate>
          <Compare metric="geographicDistanceMetric">
            <Input path="?a/geo:geometry" />
            <Input path="?b/geo:geometry" />
	    <Param name="unit" value="km" /> <!-- die parameter müssen unter dem inputpfad stehen, weil das im xml schema eine sequence ist und das xml wohl zu blöd für gleichwertige elemente ist-->
            <Param name="threshold" value="10" />
            <Param name="curveStyle" value="linear" />
          </Compare>
        </Aggregate>

      </LinkCondition>

      <Filter threshold="0.9" />

      <Outputs>
        <Output type="file" minConfidence="0.95">
          <Param name="file" value="output/1290707744203/links_accepted.nt" />
          <Param name="format" value="ntriples" />
        </Output>
        <Output type="file" maxConfidence="0.95">
          <Param name="file" value="output/1290707744203/links_verify.nt" />
          <Param name="format" value="alignment" />
        </Output>
      </Outputs>
    </Interlink>
  </Interlinks>

</Silk>
