<?xml version="1.0" encoding="utf-8" ?>
<Silk>
  <Prefixes>
    <Prefix id="rdf" namespace="http://www.w3.org/1999/02/22-rdf-syntax-ns#"/>
    <Prefix id="rdfs" namespace="http://www.w3.org/2000/01/rdf-schema#"/>
    <Prefix id="owl" namespace="http://www.w3.org/2002/07/owl#"/>
    <Prefix id="dcterms" namespace="http://purl.org/dc/terms/"/>
    <Prefix id="foaf" namespace="http://xmlns.com/foaf/0.1/"/>
    <Prefix id="vcard" namespace="http://www.w3.org/2006/vcard/ns#" />
  </Prefixes>

  <Interlinks>
    <Interlink id="persons">
      <LinkType>owl:sameAs</LinkType>

      <SourceDataset dataSource="empty" var="a">
        <RestrictTo>
          ?a rdf:type foaf:Person .
        </RestrictTo>
      </SourceDataset>

      <TargetDataset dataSource="sw" var="b">
        <RestrictTo>
          ?a rdf:type foaf:Person .
        </RestrictTo>
      </TargetDataset>

      <LinkCondition>
        <Aggregate type="average">
          <Aggregate type="max" weight="2" required="true">
            <Compare metric="jaroWinkler">
              <TransformInput function="lowerCase">
                <Input path="?a/foaf:name"/>
              </TransformInput>
              <TransformInput function="lowerCase">
                <Input path="?b/foaf:name"/>
              </TransformInput>
            </Compare>
          </Aggregate>
          <Aggregate type="max" weight="1" required="true">
            <Compare metric="jaroWinkler">
              <TransformInput function="lowerCase">
                <Input path="?a/foaf:homepage"/>
              </TransformInput>
              <TransformInput function="lowerCase">
                <Input path="?b/foaf:homepage"/>
              </TransformInput>
            </Compare>
            <Compare weight="10" metric="jaroWinkler"><!--Using jaroWinkler to allow for typing errors like trailing spaces-->
              <Input path="?a/foaf:mbox_sha1sum"/>
              <Input path="?b/foaf:mbox_sha1sum"/>
            </Compare>
          </Aggregate>
        </Aggregate>
      </LinkCondition>

      <Filter threshold="0.9"/>

    </Interlink>

  </Interlinks>
</Silk>
